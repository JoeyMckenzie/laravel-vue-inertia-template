{
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "vue-tsc && vite build && vite build --ssr",
        "fmt": "prettier --write ./resources/js",
        "fmt:check": "prettier --check ./resources/js",
        "lint": "eslint \"resources/js/**/*.{ts,vue}\"",
        "fix": "eslint --fix \"resources/js/**/*.{ts,vue}\"",
        "check": "pnpm run lint && pnpm run fmt:check"
    },
    "lint-staged": {
        "**/*.{js,ts,tsx}": [
            "pnpm run fmt",
            "pnpm run lint"
        ],
        "**/*.php": [
            "composer run fmt",
            "composer run rector"
        ]
    },
    "devDependencies": {
        "@eslint/js": "^9.3.0",
        "@iconify-json/radix-icons": "^1.1.14",
        "@iconify/vue": "^4.1.2",
        "@inertiajs/vue3": "^1.1.0",
        "@tailwindcss/forms": "^0.5.7",
        "@types/eslint-config-prettier": "^6.11.3",
        "@types/eslint__js": "^8.42.3",
        "@types/node": "^20.12.12",
        "@typescript-eslint/parser": "^7.10.0",
        "@vitejs/plugin-vue": "^5.0.4",
        "@vue/server-renderer": "^3.4.27",
        "autoprefixer": "^10.4.19",
        "axios": "^1.7.2",
        "eslint": "^9.3.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-vue": "^9.26.0",
        "laravel-vite-plugin": "^1.0.4",
        "lint-staged": "^15.2.5",
        "postcss": "^8.4.38",
        "prettier": "^3.2.5",
        "prettier-plugin-tailwindcss": "^0.5.14",
        "tailwindcss": "^3.4.3",
        "typescript": "^5.4.5",
        "typescript-eslint": "^7.10.0",
        "vite": "^5.2.11",
        "vue": "^3.4.27",
        "vue-eslint-parser": "^9.4.2",
        "vue-tsc": "^1.8.27"
    },
    "dependencies": {
        "@radix-icons/vue": "^1.0.0",
        "@vueuse/core": "^10.9.0",
        "class-variance-authority": "^0.7.0",
        "clsx": "^2.1.1",
        "radix-vue": "https://pkg.pr.new/radix-vue@943",
        "tailwind-merge": "^2.3.0",
        "tailwindcss-animate": "^1.0.7"
    }
}
